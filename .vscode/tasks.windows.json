{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "clang++.exe build active file",
            "command": "C:\\Users\\tothe\\scoop\\apps\\llvm\\current\\bin\\clang++.exe",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "--target=x86_64-pc-windows-gnu",
                "-Weverything",
                "-Wno-exit-time-destructors",
                "-Wno-global-constructors",
                "-Wno-c++98-compat"
            ],
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": "absolute"
            },
            "presentation": {
                "reveal": "silent",
                "focus": true,
                "showReuseMessage": false,
                "clear": true
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
