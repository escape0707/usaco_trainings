{
  "configurations": [
    {
      "name": "Linux",
      "includePath": ["${workspaceFolder}/**"],
      "defines": [],
      "compilerPath": "/usr/bin/clang++",
      "cStandard": "c11",
      "cppStandard": "c++14",
      "intelliSenseMode": "clang-x64",
      "browse": {
        "limitSymbolsToIncludedHeaders": true
      }
    },
    {
      "name": "Win32",
      "includePath": ["${workspaceFolder}/**"],
      "defines": ["_DEBUG", "UNICODE", "_UNICODE"],
      "compilerPath": "${env:USERPROFILE}\\scoop\\apps\\llvm\\current\\bin\\clang++.exe",
      "cStandard": "c11",
      "cppStandard": "c++14",
      "intelliSenseMode": "clang-x64",
      "compilerArgs": ["--target=x86_64-pc-windows-gnu"],
      "browse": {
        "limitSymbolsToIncludedHeaders": true
      }
    }
  ],
  "version": 4
}
